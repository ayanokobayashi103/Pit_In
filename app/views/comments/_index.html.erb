<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
      <div class="row comment_row">
          <p class="col-12"><small class="username_of_this_comment">投稿者：<%= current_user.nickname %></small></p>
          <div class="col-11 comment_for_the_community">
            <p class="each_comments"><%= comment.content %></p>
          </div>

          <div class="col-1 list-group button_for_comment">
            <%= link_to t("view.button.edit"), edit_community_comment_path(community, comment), remote: true %>
            <%= link_to t("view.button.delete"), community_comment_path(comment.community_id, comment.id), method: :delete, remote: true, data: { confirm: "本当に削除しますか?"} %>
          </div>
        </div>
    <% end %>
  <% end %>
</ul>
