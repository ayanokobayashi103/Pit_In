<div class="container-fluid daily_plan_edit">
  <%= form_with(model: @goal, url: daily_plan_path, local: true) do |goal| %>
    <% if @goal.errors.any? %>
      <div id="error_explanation">
        <h2><%= @goal.errors.count %>件のエラーがあります。</h2>
        <ul>
          <% @goal.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h4 class="">今日の計画</h4>
    <small class="monthly_plan_guide">今月取り組む解決案を選択して保存を押してください。</small>
    <p class="goal_title_in_daily"><strong><%= @goal.title %></strong></p>
    <div class="row monthly_edit_zone">
      <div class="col-10 problem_and_solution_title">
        <ul class="list-group">
          <% @goal.problems.each do |p| %>
            <% p.solutions.each do |so| %>
              <% so.tasks.each do |t| %>
                <li class="list-group-item"><strong><%= t.title %></strong></li>
                <% t.steps.each do |st| %>
                  <% case st.status %>
                    <% when "保留中" %>
                      <li class="list-group-item"><span class="badge badge-danger badge-pill goal_badges"><%= st.status %></span><%= st.title %></li>
                    <% when "取組中" %>
                      <li class="list-group-item"><span class="badge badge-primary badge-pill goal_badges"><%= st.status %></span><%= st.title %></li>
                    <% when "完了" %>
                      <li class="list-group-item"><span class="badge badge-warning badge-pill goal_badges"><%= st.status %></span><%= st.title %></li>
                  <% end %>
                <% end %>
              <% end %>
            <% end%>
          <% end %>
        </ul>
      </div>

      <div class="col-2 problem_and_solution_checkbox">
        <ul class="list-group">
          <%= goal.fields_for :problems do |problem| %>
            <%= problem.fields_for :solutions do |solution| %>
              <%= solution.fields_for :tasks do |task| %>
                <li class="list-group-item status_selectbox"><%= task.select :status, [['保留中', '保留中'], ['取組中', '取組中'], ['完了', '完了']], {}, class: 'form-control select_box_in_planning' %></li>
                <%= task.fields_for :steps do |step| %>
                  <li class="list-group-item status_selectbox">
                    <%= step.select :status, [['保留中', '保留中'], ['取組中', '取組中'], ['完了', '完了']], {}, class: 'form-control select_box_in_planning' %>
                  </li>
                <% end %>
              <% end %>
            <% end%>
          <% end %>
        </ul>
      </div>
    </div>

  <p class="actions"><%= goal.submit '保存', class: "btn btn-outline-secondary plan_save" %></p>
  <% end %>
</div>
