<!DOCTYPE html>
<html>
  <head>
    <title>PitIn</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
      <li class="navbar-brand" >Pit In</li>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <% if user_signed_in? %>
          <div class="container">
            <ul class="navbar-nav">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">マイページ</a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <a class="dropdown-item" href="/">登録情報</a>
                  <a class="dropdown-item" href="/users/edit">情報変更</a>
                  <a class="dropdown-item" href="/users/edit">アカウント削除</a>
                </div>
              </li>

              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">目標</a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <a class="dropdown-item" href="/goals">目標一覧</a>
                  <a class="dropdown-item" href="/goals/new">目標作成</a>
                </div>
              </li>

              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">計画</a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <a class="dropdown-item" href="/monthly_plans">Monthly</a>
                  <a class="dropdown-item" href="/weekly_plans">Weekly</a>
                  <a class="dropdown-item" href="/daily_plans">Daily</a>
                </div>
              </li>

              <li class="nav-item active">
                <a class="nav-link" href="/today_jobs">Todo<span class="sr-only">(current)</span></a>
              </li>
            </ul>

            <ul class="navbar-nav justify-content-end">
              <li class="nav-item active">
                <a class="nav-link" href="/users/sign_out" data-method="delete">ログアウト<span class="sr-only">(current)</span></a>
              </li>
            </ul>

          <% else %>
            <ul class="navbar-nav mr-0">
              <li class="nav-item active">
                <a class="nav-link" href="/users/sign_up">新規登録<span class="sr-only">(current)</span></a>
              </li>

              <li class="nav-item active">
                <a class="nav-link" href="/users/sign_in">ログイン<span class="sr-only">(current)</span></a>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
    </nav>

    <% if user_signed_in? %>
      <%= link_to "目標一覧", goals_path %>
      <%= link_to "目標作成", new_goal_path %>
      <%= link_to "Montlyプラン", monthly_plans_path %>
      <%= link_to "Weeklyプラン", weekly_plans_path %>
      <%= link_to "Dailyプラン", daily_plans_path %>
      <%= link_to "ToDo", today_jobs_path %>
      <%= link_to "マイページ", new_user_registration_path %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
    <% end %>

    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
        <p class="alert alert-error"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
