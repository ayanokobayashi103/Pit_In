<div class="container-fluid weekly_plan_edit">
  <%= form_with(model: @goal, url: weekly_plan_path, local: true) do |goal| %>
    <% if @goal.errors.any? %>
      <div id="error_explanation">
        <h2><%= @goal.errors.count %>件のエラーがあります。</h2>
        <ul>
          <% @goal.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h4 class="goal_page_title_in_weekly_edit">今週の計画</h4>
    <small class="monthly_plan_guide">今週取り組むタスクを選択して保存を押してください。</small>
    <p class="goal_title_in_weekly"><strong><%= @goal.title %></strong></p>
    <div class="row monthly_edit_zone">
      <div class="col-10 problem_and_solution_title">
        <ul class="list-group">
          <% @goal.problems.each do |p| %>
            <% p.solutions.each do |so| %>
              <%# if so.status == "取組中" %>
                <li class="list-group-item"><strong><%= so.title %></strong></li>
                <% so.tasks.each do |t| %>
                  <% case t.status %>
                    <% when "保留中" %>
                      <li class="list-group-item"><span class="badge badge-danger badge-pill goal_badges"><%= t.status %></span><%= t.title %></li>
                    <% when "取組中" %>
                      <li class="list-group-item"><span class="badge badge-primary badge-pill goal_badges"><%= t.status %></span><%= t.title %></li>
                    <% when "完了" %>
                      <li class="list-group-item"><span class="badge badge-warning badge-pill goal_badges"><%= t.status %></span><%= t.title %></li>
                  <% end %>
                <% end %>
              <%# end %><!-- if分のend -->
            <% end %>
          <% end%>
        </ul>
      </div>

      <div class="col-2 problem_and_solution_checkbox">
        <ul class="list-group">
          <%= goal.fields_for :problems do |problem| %>
            <%= problem.fields_for :solutions do |solution| %>
            <li class="list-group-item status_selectbox"><%= solution.select :status, [['保留中', '保留中'], ['取組中', '取組中'], ['完了', '完了']], {}, class: 'form-control select_box_in_planning' %></li>
            <%= solution.fields_for :tasks do |task| %>
              <li class="list-group-item status_selectbox">
                <%= task.select :status, [['保留中', '保留中'], ['取組中', '取組中'], ['完了', '完了']], {}, class: 'form-control select_box_in_planning' %>
              </li>
            <% end %>
          <% end %>
        <% end%>
      </div>
    </div>

  <p class="actions"><%= goal.submit '保存', class: "btn btn-outline-secondary plan_save" %></p>
  <% end %>
</div>
