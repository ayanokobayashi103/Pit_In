<%= form_with(model: @goal, local: true) do |goal| %>
<% if @goal.errors.any? %>
  <div id="error_explanation">
    <h2><%= @goal.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @goal.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<!-- 目標登録フォーム -->
  <div class="field">
    <%= goal.label :title, 'タイトル' %>
    <%= goal.text_field :title %>
  </div>

  <div class="field">
    <%= goal.label :day_to_start, '開始' %>
    <%= goal.date_field :day_to_start %>
  </div>

  <div class="field">
    <%= goal.label :day_to_finish, '期限' %>
    <%= goal.date_field :day_to_finish %>
  </div>

  <div class="field">
    <%= goal.label :purpose, '目的' %>
    <%= goal.text_field :purpose %>
  </div>

  <div class="field">
    <%= goal.label :status, '状態' %>
    <%= goal.select :status, [['選択してください', ''], ['未着手', '未着手'], ['着手中', '着手中'], ['期限切れ', '期限切れ'], ['完了', '完了']] %>
  </div>

  <div class="field">
    <%= goal.label :when_succeed, '達成後の未来' %>
    <%= goal.text_area :when_succeed %>
  </div>

  <div class="field">
    <%= goal.label :when_fail, '未達成の未来' %>
    <%= goal.text_area :when_fail %>
  </div>

 <!-- problem登録フォーム -->
  <%= goal.fields_for :problems do |problem| %>
    <h2 >問題</h2>
    <div class="field">
      <%= problem.label :title, "問題タイトル" %>
      <%= problem.text_field :title %>
    </div>
    <div class="field">
      <%= problem.label :status, "状態" %>
      <%= problem.check_box :status, {}, '解決', '未解決' %>
    </div>
  <% end %>

  <div class="actions">
    <%= goal.submit '作成' %>
  </div>
<% end %>
